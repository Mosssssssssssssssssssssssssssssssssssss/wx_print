.mainbox {
  display: flex;
  flex-direction: column;
}
.top-box {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  height: 190px;
}
.display-row {
  display: flex;
  flex-direction: row;
  border-bottom: 1px solid #eee;
  margin-top: 20px;
  margin-left: 50px;
  margin-right: 50px;
}
.mid-box {
  display: flex;
  flex-direction: column;
  margin-left: 30px;
  margin-right: 30px;
}
.mid {
  display: flex;
  flex-direction: row;
  margin-bottom: 40px;
  border-bottom: 1px solid #eee;
}
.input-border {
  font-size: 18px;
  text-align: center;
  width: 100%;
}
.logo {
  width: 150px;
}
.bot-box {
  width: 95%;
  display: flex;
  flex-direction: row;
  margin: 12px auto;
}
.bot-button {
  margin-right: 50px;
  margin-left: 50px;
  padding-top: 20px;
  font-size: 18px;
}
.logo-text{
  font-size:25px;
}
.hrcf{
  font-size:18px;
}