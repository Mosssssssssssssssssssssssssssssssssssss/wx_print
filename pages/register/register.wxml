<view class="main-box">
  <view class="top-box">
    <image class="logo" src="../image/nnxy.jpg" mode="widthFix"></image>
    <view style="font-size:25px;">南宁学院快印中心</view>
  </view>
  <view class="reg-box">
    <text class="text-w">学号</text>
    <input class="input-b" placeholder="请输入学号" bindinput="registerNum"></input>
  </view>
  <view class="reg-box">
    <text class="text-w">姓名</text>
    <input class="input-b" placeholder="请输入姓名" bindinput="registerName"></input>
  </view>
  <view class="reg-box">
    <text class="text-w">手机号</text>
    <input class="input-b" placeholder="请输入手机号" bindinput="registerPhone"></input>
  </view>
  <view class="reg-box">
    <text class="text-w">密码</text>
    <input class="input-b" type="password" placeholder="请输入密码" bindinput="registerPassword"></input>
  </view>
  <view class="reg-box">
    <text class="text-w">确认密码</text>
    <input class="input-b" type="password" placeholder="请确认密码" bindinput="registerRepassword"></input>
  </view>
  <view class="bot-button">
    <button bindtap="register" style="font-size:18px" type="primary">注册</button>
  </view>
</view>